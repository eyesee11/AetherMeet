{
  "name": "aethermeet",
  "version": "1.0.0",
  "description": "Secure & Ephemeral Team Chat Rooms",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unitTests.test.js --verbose",
    "test:integration": "jest tests/integrationTests.test.js --verbose",
    "test:api": "jest tests/apiTests.test.js --verbose",
    "build": "npm run build:prepare && npm run build:assets && npm run build:verify",
    "build:prepare": "npm install --include=dev",
    "build:assets": "npm run build:css && npm run build:js",
    "build:css": "node build-scripts/build-css.js",
    "build:js": "node build-scripts/compile-assets.js",
    "build:verify": "node build-scripts/verify-build.js",
    "prebuild": "npm run clean",
    "clean": "node build-scripts/clean.js"
  },
  "keywords": [
    "chat",
    "rooms",
    "ephemeral",
    "secure",
    "websockets"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.2",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.17.2",
    "multer": "^1.4.5-lts.1",
    "node-schedule": "^2.1.1",
    "pdfkit": "^0.17.1",
    "postcss": "^8.4.47",
    "socket.io": "^4.8.1",
    "tailwindcss": "^3.4.17",
    "word-exists": "^1.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.5.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
